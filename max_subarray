// maximum_subarray.cpp : This file contains the 'main' function. Program execution begins and ends there.
//

#include "pch.h"
#include <iostream>
#include <vector>

using namespace std;

int max_subarray(vector<int> a)
{
	if (a.size() == 0)
		return 0;
	int max = a[0];
	int sumCnt = a[0];
	for (int i = 1; i < a.size(); i++)
	{
		if (max < 0)
		{
			if (max < a[i])
			{
				max = a[i];
				sumCnt = max;
			}
		}
		else
		{
			sumCnt += a[i];
			if (sumCnt > max)
				max = sumCnt;
			else if (sumCnt < 0)
				sumCnt = 0;
		}
		//max  = sumCnt > max ? sumCnt : max;
	}
	return max;
}
int main()
{
	vector<int> a = { -2,1,-3,4,-1,2,1,-5,4 };//{31,-41,59,26,-53,58,97,-93,-23,84 };//{23,-2,54,6,-444,67,53,2,7,-1 };
//	vector<int> a = {};
	cout << max_subarray(a);
}


